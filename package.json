{
  "name": "multicloud-devops-platform",
  "version": "1.0.0",
  "description": "Production-ready multi-cloud microservices platform with advanced DevOps practices",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"cd apps/user-service && npm start\" \"cd apps/product-service && npm start\" \"cd apps/order-service && npm start\" \"cd apps/notification-service && npm start\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "deploy:azure": "cd infrastructure/azure && terraform apply",
    "deploy:aws": "cd infrastructure/aws && terraform apply",
    "deploy:k8s": "kubectl apply -f kubernetes/",
    "validate:terraform": "cd infrastructure/azure && terraform validate && cd ../aws && terraform validate"
  },
  "keywords": ["microservices", "kubernetes", "devops", "cloud", "terraform", "azure", "aws"],
  "author": "DevOps Platform Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
